@using System.Net.Http
@using Models
@inject HttpClient Http
@inject NavigationManager NavManager
    <div>
        <div class="input-group mb-3 w-50 mx-auto">
            <input @bind=InputText type="text" class="form-control" placeholder="Github login" aria-label="Recipient's username" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button @onclick="async () => await ShowUser()" class="btn btn-primary" type="button">Search</button>
            </div>
        </div>

        <UserComponent Login="@InputText" @ref="child"/>
    </div>

    @code {
        private bool DisplayUser { get; set; } = false;
        public string InputText { get; set; }
        UserComponent child;
        private async Task ShowUser()
        {
            await child.Refresh();
        }
    }
